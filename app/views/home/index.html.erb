<table class="table table-striped table-dark">
  <% if @currencies.present? %>
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col">Buy</th>
        <th scope="col">Sell</th>
        <th scope="col">Cross</th>
      </tr>
    </thead>
    <tbody>
      <% @currencies.each do |currency| %>
        <tr>
          <td><%= currency_name(currency['currencyCodeA']) %></td>
          <td><%= currency_name(currency['currencyCodeB']) %></td>
          <td><%= currency_date(currency['date']) %></td>
          <td><%= currency['rateBuy'] %></td>
          <td><%= currency['rateSell'] %></td>
          <td><%= currency['rateCross'] %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <tr>
        <td class="text-center"> No currencies available. Please, try again in a minute. </td>
      </tr>
    </tbody>
  <% end %>
</table>

